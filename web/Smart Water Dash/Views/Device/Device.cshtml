@using System.Collections
@model IEnumerable< Smart_Water_Dash.Models.DeviceModel>

<div class = "container p-3">
    <div class = "row pt-4">
        <h2 class = "text-primary"> User List </h2>
    </div>
    <div class = "col-6">
        Devices
    </div>

<br /><br />
@if (Model.Count() > 0)
{
    <table class = "table table-bordered table-striped" style = "width: 100%">
        <thead>
            <tr>
                <th>
                    Device ID
                </th>
                <th>
                    User Name
                </th>
                <th>
                    User ID
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
            <tr>
                <td width = "30%">@obj.deviceId</td>
                <td width = "30%">@obj.userName</td>
                <td width = "30%">@obj.userId</td>              
            </tr>
            }
        </tbody>
    </table>
    }
    else
    {
    <p>No Devices have been loaded</p>
    }
}
</div>

