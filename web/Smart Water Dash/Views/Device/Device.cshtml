@*@using System.Collections

@model IEnumerable< Smart_Water_Dash.Models.DeviceModel>

<div class = "container p-3">
    <div class = "row pt-4">
        <h2 class = "text-primary"> Devices </h2>
    </div>
    <div class = "col-6">
        Devices
    </div>

<br /><br />
@if (Model.Count() > 0)
{
    <table class = "table table-bordered table-striped" style = "width: 100%">
        <thead>
            <tr>
                <th>
                    Device ID
                </th>
                <th>
                    User Name
                </th>
                <th>
                    User ID
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
            <tr>
                <td width = "30%">@obj.deviceId</td>
                <td width = "30%">@obj.userName</td>
                <td width = "30%">@obj.userId</td>              
            </tr>
            }
        </tbody>
    </table>
    }
    else
    {
    <p>No Devices have been loaded</p>
    }

    <!--begin::Login Sign up form-->
    <div class="login-signup w-50 text-center row justify-content-center">
        <div class="mb-20">
            <h3>Sign Up</h3>
            <div class="text-muted font-weight-bold">Enter your details to create your account</div>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="post" asp-action="SignupUser" class="form" id="kt_login_signup_form">
            <div class="form-group mb-5">
                <input class="form-control h-auto form-control-solid py-4 px-8" type="text" placeholder="Fullname" name="fullname" />
            </div>
            <div class="form-group mb-5">
                <input class="form-control h-auto form-control-solid py-4 px-8" type="text" placeholder="Email" name="email" autocomplete="off" />
            </div>
            <div class="form-group mb-5">
                <input class="form-control h-auto form-control-solid py-4 px-8" type="password" placeholder="Password" name="password" />
            </div>
            <div class="form-group mb-5">
                <input class="form-control h-auto form-control-solid py-4 px-8" type="password" placeholder="Confirm Password" name="confirmpassword" />
            </div>
            <div class="form-group mb-5 text-left">
                <div class="checkbox-inline">
                    <label class="checkbox m-0">
                        <input type="checkbox" name="agree" />
                        <span></span>I Agree the
                        <a href="#" class="font-weight-bold ml-1">terms and conditions</a>.
                    </label>
                </div>
                <div class="form-text text-muted text-center"></div>
            </div>
            <div class="form-group d-flex flex-wrap flex-center mt-10">
                <input asp-action="SignupUser" type="submit"  class="btn btn-primary font-weight-bold px-9 py-4 my-3 mx-2" value="Signup" />
                <input asp-controller="Login" asp-action="Login" type="submit"  class="btn btn-primary font-weight-bold px-9 py-4 my-3 mx-2" value="Cancel" />

             
            </div>
        </form>
    </div>
    <!--end::Login Sign up form-->
}
</div>

*@